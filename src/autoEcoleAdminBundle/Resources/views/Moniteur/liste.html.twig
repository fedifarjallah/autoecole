{% extends '@autoEcoleAdmin/Default/index.html.twig' %}
{% block stylesheets %}
    <!-- DataTables CSS -->
    <link href="{{ asset('admin_template/css/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet">

    <!-- DataTables Responsive CSS -->
    <link href="{{ asset('admin_template/css/dataTables/dataTables.responsive.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Liste des moniteurs</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered" id="dataTables-moniteurs">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Prenom</th>
                                <th>CIN</th>
                                <th>Salaire</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for moniteur in moniteurs %}
                                <tr>
                                    <td>{{ moniteur.nom }}</td>
                                    <td>{{ moniteur.prenom }}</td>
                                    <td>{{ moniteur.cin }}</td>
                                    <td>{{ moniteur.salaire }} DT</td>
                                    <td>
                                        <center>
                                            <a class="btn btn-outline btn-warning btn-xs" href="{{ path('auto_ecole_admin_moniteur_modifier', {'id': moniteur.id}) }}"><i class="fa fa-edit"></i></a>
                                            <a class="btn btn-outline btn-danger btn-xs" href="{{ path('auto_ecole_admin_moniteur_supprimer', {'id': moniteur.id}) }}"
                                               onclick="return confirm('Are you sure you want to delete this item?');"><i
                                                        class="fa fa-trash"></i></a>
                                        </center>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
{% block scripts %}
    <!-- DataTables JavaScript -->
    <script src="{{ asset('admin_template/js/dataTables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('admin_template/js/dataTables/dataTables.bootstrap.min.js') }}"></script>

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-moniteurs').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}

