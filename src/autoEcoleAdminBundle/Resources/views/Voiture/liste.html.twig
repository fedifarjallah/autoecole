{% extends '@autoEcoleAdmin/Default/index.html.twig' %}
{% block stylesheets %}
    <!-- DataTables CSS -->
    <link href="{{ asset('admin_template/css/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet">

    <!-- DataTables Responsive CSS -->
    <link href="{{ asset('admin_template/css/dataTables/dataTables.responsive.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Liste des voitures</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered" id="dataTables-voitures">
                            <thead>
                            <tr>
                                <th>Marque</th>
                                <th>Modele</th>
                                <th>Prix</th>
                                <th>Couleur</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for voiture in voitures %}
                                <tr>
                                    <td>{{ voiture.marque }}</td>
                                    <td>{{ voiture.modele }}</td>
                                    <td>{{ voiture.prix }} DT</td>
                                    <td>{{ voiture.couleur }}</td>
                                    <td>
                                        <center>
                                            <a class="btn btn-outline btn-warning btn-xs" href="{{ path('auto_ecole_admin_voiture_modifier', {'id': voiture.id}) }}"><i class="fa fa-edit"></i></a>
                                            <a class="btn btn-outline btn-danger btn-xs" href="{{ path('auto_ecole_admin_voiture_supprimer', {'id': voiture.id}) }}"
                                               onclick="return confirm('Are you sure you want to delete this item?');"><i
                                                        class="fa fa-trash"></i></a>
                                        </center>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
{% block scripts %}
    <!-- DataTables JavaScript -->
    <script src="{{ asset('admin_template/js/dataTables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('admin_template/js/dataTables/dataTables.bootstrap.min.js') }}"></script>

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-voitures').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}
